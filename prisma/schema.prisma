generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"] // change from default
}

datasource db {
  provider = "sqlite" // d1 is sql base database
  url      = env("DATABASE_URL")
}

// Create a simple model database
model User {
  id        String @id @default(uuid())
  email     String @unique
  firstName String
  lastName  String
  password  String
  status    String
  role      String
}
